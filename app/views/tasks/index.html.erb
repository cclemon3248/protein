<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>name</ht>
      <th>Store</th>
      <th>Name</th>
      <th>Protein</th>
      <th>Calorie</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user.name %></td>
        <td><%= task.store %></td>
        <td><%= task.name %></td>
        <td><%= task.protein %></td>
        <td><%= task.calorie %></td>
        <td><%= task.image %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>いいね</td>
      </tr>
    <% end %>
  </tbody>
</table>

